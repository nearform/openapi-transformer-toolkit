{
  "name": "oas-codegen",
  "version": "1.0.0",
  "description": "Generating schemas and types from OpenAPI for Fastify and React apps",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "json2ts": "./src/cli.js json2ts -i ./example/output/json -o ./example/output/types -c ./example/json2ts-config.json",
    "lint": "eslint .",
    "oas2json": "./src/cli.js oas2json -i ./example/openapi.yml -o ./example/output/json",
    "prepare": "husky install",
    "test": "jest"
  },
  "bin": {
    "oas-codegen": "./src/cli.js"
  },
  "files": [
    "index.js",
    "src"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nearform/oas-codegen.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/nearform/oas-codegen/issues"
  },
  "homepage": "https://github.com/nearform/oas-codegen#readme",
  "dependencies": {
    "@openapi-contrib/openapi-schema-to-json-schema": "^4.0.4",
    "commander": "^10.0.1",
    "fs-extra": "^11.1.1",
    "json-schema-to-typescript": "^12.0.0",
    "yaml": "^2.2.2"
  },
  "devDependencies": {
    "@babel/plugin-transform-modules-commonjs": "^7.21.2",
    "@commitlint/cli": "^17.6.1",
    "@commitlint/config-conventional": "^17.6.1",
    "babel-plugin-transform-import-meta": "^2.2.0",
    "eslint": "^8.39.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-jest": "^27.2.1",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "lint-staged": "^13.2.1",
    "prettier": "^2.8.8",
    "ts-jest": "^29.1.0"
  },
  "lint-staged": {
    "*.{js,jsx}": "eslint --cache --fix"
  }
}
